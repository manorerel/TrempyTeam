<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hadar.trempyteam.CreateNewTrempActivity"
    android:measureWithLargestChild="false"
    android:layoutDirection="ltr"
    android:weightSum="1"
    android:background="@drawable/design">


    <ImageView
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:maxWidth="50dp"
        android:minWidth="50dp"
        android:layout_weight="0.10" />



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="טלפון"
            android:id="@+id/student_phone"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextPhone"
            android:layout_marginRight="120dp"
            android:inputType="number"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="מוצא"
            android:textStyle="bold"
            android:id="@+id/exit_from_"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:id="@+id/exitfrom"
            android:layout_marginRight="120dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="יעד"
            android:textStyle="bold"
            android:id="@+id/dest_"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:id="@+id/dest"
            android:layout_marginRight="120dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="מקומות פנויים"
            android:textStyle="bold"
            android:id="@+id/avaliable_seats_"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/avaliable_seats"
            android:layout_marginRight="185dp"
            android:inputType="number"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="תאריך"
            android:textStyle="bold"
            android:id="@+id/date_tremp"
            android:layout_marginRight="20dp" />

        <com.example.hadar.trempyteam.DateEditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:id="@+id/date"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="שעה"
            android:textStyle="bold"
            android:id="@+id/time_tremp"
            android:layout_marginRight="20dp"/>
        <com.example.hadar.trempyteam.TimeEditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:id="@+id/time"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="סוג רכב"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:id="@+id/car_model"
            android:layout_marginRight="120dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Image"
            android:src="@mipmap/camera"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


