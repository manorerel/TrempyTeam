<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:layout_gravity="end"
    >

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawerLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Tremps_listView1"/>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/noResults1"
        android:layout_marginBottom="50dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:textSize="36sp" />


        <!--android:layout_height="384dp" The navigation drawer -->
        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:id="@+id/drawerPane1"
            android:layout_gravity="start"
            >

            <!-- Profile Box -->

            <RelativeLayout
                android:id="@+id/profileBox1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="#CFD8DC"
                android:padding="8dp" >

                <com.example.hadar.trempyteam.ProfilePictureView
                    android:id="@+id/profile1"
                    android:layout_centerInParent="true"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="10dp"
                    android:padding="1dp"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/x"/>
                />


                <TextView
                    android:id="@+id/userName1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="70dp"
                    android:textSize="20sp"
                    android:textColor="#616161"
                    android:textStyle="bold"
                    android:layout_marginTop="175dp"/>

                />

            </RelativeLayout>

            <!-- List of Actions (pages) -->
            <ListView
                android:id="@+id/navList1"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/profileBox1"
                android:choiceMode="singleChoice"
                android:background="#ffffffff"
                />

        </RelativeLayout>


    </android.support.v4.widget.DrawerLayout>


</RelativeLayout>