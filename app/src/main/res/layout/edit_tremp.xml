<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hadar.trempyteam.EditTrempActivity"
    android:measureWithLargestChild="false"
    android:layoutDirection="ltr"
    android:weightSum="1"
    android:background="@drawable/design">

    <ImageView
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_weight="0.10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="טלפון:"
            android:textStyle="bold"
            android:id="@+id/student_phone"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:id="@+id/editPhone"
            android:layout_marginRight="120dp"
            android:inputType="number"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:orientation="vertical">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="מוצא:"
            android:textStyle="bold"
            android:id="@+id/exit_from_"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:id="@+id/editExitfrom"
            android:layout_marginRight="120dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:orientation="vertical">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="יעד:"
            android:textStyle="bold"
            android:id="@+id/dest_"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:id="@+id/editDest"
            android:layout_marginRight="120dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:orientation="vertical">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="תאריך:"
            android:textStyle="bold"
            android:id="@+id/date_tremp"
            android:layout_marginRight="20dp" />

        <com.example.hadar.trempyteam.DateEditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:id="@+id/editDate"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:orientation="vertical">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="שעה:"
            android:textStyle="bold"
            android:id="@+id/time_tremp"
            android:layout_marginRight="20dp"/>

        <com.example.hadar.trempyteam.TimeEditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:id="@+id/editTime"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:orientation="vertical">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="סוג רכב:"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:id="@+id/editCar_model"
            android:layout_marginRight="120dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layoutDirection="rtl">
    </RelativeLayout>
    <TableRow
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:backgroundTint="#00BCD4"
            android:textStyle="normal|bold"
            android:textColor="#FFFFFF"
            android:text="שמור"
            android:id="@+id/EditBtnSave"
            android:background="@drawable/rounded_corners"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:backgroundTint="#00BCD4"
            android:textStyle="normal|bold"
            android:textColor="#FFFFFF"
            android:text="בטל"
            android:id="@+id/EditBtnCancle"
            android:background="@drawable/rounded_corners"
            />

</TableRow>

</LinearLayout>
